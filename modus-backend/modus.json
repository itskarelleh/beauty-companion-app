{
  "$schema": "https://schema.hypermode.com/modus.json",
  "endpoints": {
    "default": {
      "type": "graphql",
      "path": "/graphql",
      "auth": "bearer-token"
    }
  },
  "models": {
    "janus-flow": {
      "sourceModel": "deepseek-ai/JanusFlow-1.3B",
      "provider": "hugging-face",
      "connection": "hypermode"
    }
  },
  "connections": {
    "anthropic": {
      "type": "http",
      "baseUrl": "https://api.anthropic.com/v1/messages/",
      "headers": {
        "Authorization": "Bearer ${MODUS_CLAUDE_API_KEY}"
      }
    }
  }
}
